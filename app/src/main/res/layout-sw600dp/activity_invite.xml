<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/back">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <TextView
            fontPath="fonts/Roboto-Bold.ttf"
            android:text="Input invite code and get 300 coins"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
            fontPath="fonts/Roboto-Bold.ttf"
            android:layout_gravity="center_horizontal"
            android:id="@+id/codeTxt"
            android:inputType="text"
            android:maxLength="30"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:textSize="20sp"
            android:paddingEnd="8dp"
            android:gravity="center"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:hint="invite code"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_field"
            android:layout_width="wrap_content"
            android:layout_height="48dp" />

        <ImageView
            android:id="@+id/checkBtn"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            fontPath="fonts/Roboto-Bold.ttf"
            android:text="Your invite code:"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/refCodeText"
            fontPath="fonts/Roboto-Bold.ttf"
            android:text="8Q76HTZ692X"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/shareBtn"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            fontPath="fonts/Roboto-Bold.ttf"
            android:text="Your friend will send you a validation
code, input it here &amp; get 100 coins"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
            fontPath="fonts/Roboto-Bold.ttf"
            android:layout_gravity="center_horizontal"
            android:id="@+id/validationTxt"
            android:inputType="text"
            android:maxLength="30"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:textSize="20sp"
            android:paddingEnd="8dp"
            android:gravity="center"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:hint="validation code"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_field"
            android:layout_width="wrap_content"
            android:layout_height="48dp" />

        <ImageView
            android:id="@+id/validateBtn"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/validate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <include layout="@layout/banner" />
    </LinearLayout>

</FrameLayout>